<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PikietazActivity" >

    <TextView
        android:id="@+id/ref_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_button"
        android:layout_marginTop="37dp"
        android:text="Ref="
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/ref_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/add_button"
        android:layout_alignTop="@+id/ref_label"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/ref_label"
        android:ems="10"
        android:text="0" />

    <Button
        android:id="@+id/minus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ref_label"
        android:minHeight="100dp"
        android:minWidth="120dip"
        android:text="-"
        android:textSize="@dimen/Big" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/pk_edit"
        android:layout_below="@+id/pk_edit"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/ref_label"
        android:minHeight="100dp"
        android:text="Dodaj" />

    <EditText
        android:id="@+id/pk_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/minus_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/minus_button"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <Button
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pk_edit"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/minus_button"
        android:minHeight="100dp"
        android:minWidth="120dip"
        android:text="+"
        android:textSize="@dimen/Big" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ref_label"
        android:layout_alignRight="@+id/ref_edit"
        android:layout_below="@+id/ref_edit"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/pk_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pk_edit"
        android:layout_alignParentLeft="true"
        android:text="Pk="
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>